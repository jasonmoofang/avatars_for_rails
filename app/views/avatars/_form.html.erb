<div class="avatar-update">
  <%= render partial: 'avatars/current',
             object: avatarable,
             as: :avatarable %>

  <%= form_for avatarable, url: avatar_path, multipart: true do |f| %>
    <%= f.file_field :logo, "data-url" => avatar_path %>
    <%= hidden_field_tag :class, avatarable.class.to_s.underscore %>
    <%= hidden_field_tag :id, avatarable.id %>
  <% end %>
</div>

<%= render partial: 'avatars/progress' %>

<%= javascript_tag do %>
  $(function() {
    AvatarForRails.edit();
  });
<% end %>
